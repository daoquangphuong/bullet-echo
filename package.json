{
  "name": "bullet-echo",
  "version": "1.0.0",
  "private": true,
  "engines": {},
  "husky": {
    "hooks": {
      "pre-commit": "NODE_ENV=production lint-staged"
    }
  },
  "lint-staged": {
    "src/*": [
      "pretty-quick --staged"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "pkg": {
    "scripts": "dest/index.js",
    "assets": "dest/public",
    "targets": [
      "node12-linux-x64",
      "node12-macos-x64",
      "node12-win-x64"
    ],
    "outputPath": "build"
  },
  "scripts": {
    "start": "node --inspect=7071 --optimize_for_size --max_old_space_size=460 src/index.js",
    "dev": "nodemon src/index.js",
    "pkg": "rm -rf ./build && node tools/build.js && pkg ./dest/index.js -c ./package.json --options no-warnings --out-path ./build && rm -rf ./dest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fs-extra": "^10.0.0",
    "webpack": "^4.29.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pkg": "^5.4.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
